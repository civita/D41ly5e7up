startup_message off

# set a big scrolling buffer
defscrollback 5000

# Enable mouse scrolling and scroll bar history scrolling
termcapinfo xterm* ti@:te@

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-w%?%{r}[ %{W}%t%?(%u)%?%{r} ]%{w}%?%+w%?%?%= %{g}]%{y}[ Exit: %{Y}Ctrl%{y}+%{Y}a d%{y}  Switch: %{Y}Ctrl%{y}+%{Y}a%{y}+%{Y}a%{y} ]%{g}[%{B} %m/%d %{W}%c %{g}]'

msgwait 1
